<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImageCaption" parent="DetailTitle">
        <item name="android:background">@color/image_title_background</item>
    </style>

    <style name="AsteroidName">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AsteroidApproachDate">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailTitle">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailData" parent="AsteroidName" />

</resources>
